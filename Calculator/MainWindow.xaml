<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="525" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="4"
               Content="0" 
               FontSize="20" 
               Foreground="DarkGray"
               Visibility="Collapsed"
               HorizontalAlignment="Right" 
               VerticalAlignment="Top"
               x:Name="label_FirstValue"/>
        <Label Grid.ColumnSpan="4"
               Content="0" 
               FontSize="50" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom"
               x:Name="label_Result"/>
        <Button Grid.Row="1"
                Grid.Column="0"
                Margin="5"
                Content="AC"
                x:Name="button_Clear"
                Click="button_Clear_Click"/>
        <Button Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Content="+/-"
                x:Name="button_Negative"
                Click="button_Negative_Click"/>
        <Button Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Content="%"
                x:Name="Percent_Button"
                Click="Percent_Button_Click"/>
        <Button Grid.Row="1"
                Grid.Column="3"
                Margin="5"
                Content="/"
                x:Name="button_Divide"
                Click="button_Operator_Click"/>
        <Button Grid.Row="2"
                Grid.Column="0"
                Margin="5"
                Content="7"
                x:Name="button_7"
                Click="button_Number_Click"/>
        <Button Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Content="8"
                x:Name="button_8"
                Click="button_Number_Click"/>
        <Button Grid.Row="2"
                Grid.Column="2"
                Margin="5"
                Content="9"
                x:Name="button_9"
                Click="button_Number_Click"/>
        <Button Grid.Row="2"
                Grid.Column="3"
                Margin="5"
                Content="*"
                x:Name="button_Multiply"
                Click="button_Operator_Click"/>
        <Button Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                Content="4"
                x:Name="button_4"
                Click="button_Number_Click"/>
        <Button Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                Content="5"
                x:Name="button_5"
                Click="button_Number_Click"/>
        <Button Grid.Row="3"
                Grid.Column="2"
                Margin="5"
                Content="6"
                x:Name="button_6"
                Click="button_Number_Click"/>
        <Button Grid.Row="3"
                Grid.Column="3"
                Margin="5"
                Content="-"
                x:Name="button_Subtract"
                Click="button_Operator_Click"/>
        <Button Grid.Row="4"
                Grid.Column="0"
                Margin="5"
                Content="1"
                x:Name="button_1"
                Click="button_Number_Click"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                Margin="5"
                Content="2"
                x:Name="button_2"
                Click="button_Number_Click"/>
        <Button Grid.Row="4"
                Grid.Column="2"
                Margin="5"
                Content="3"
                x:Name="button_3"
                Click="button_Number_Click"/>
        <Button Grid.Row="4"
                Grid.Column="3"
                Margin="5"
                Content="+"
                x:Name="button_Add"
                Click="button_Operator_Click"/>
        <Button Grid.Row="5"
                Grid.Column="0"
                Margin="5"
                Content="0"
                Grid.ColumnSpan="2"
                x:Name="button_0"
                Click="button_Number_Click"/>
        <Button Grid.Row="5"
                Grid.Column="2"
                Margin="5"
                Content="."
                x:Name="button_Decimal"
                Click="button_Decimal_Click"/>
        <Button Grid.Row="5"
                Grid.Column="3"
                Margin="5"
                Content="="
                x:Name="button_Equals"
                Click="button_Equals_Click"/>
    </Grid>
</Window>
